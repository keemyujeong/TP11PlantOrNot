<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bug"
    >

    <TextView
        android:id="@+id/tv_plant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_bug_part"
        android:fontFamily="@font/suncheon"
        android:padding="24dp"
        android:text="작물명" />

    <TextView
        android:id="@+id/tv_bug_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_plant_name"
        android:text="해충 이름"
        android:fontFamily="@font/suncheon"
        android:textSize="18sp"
        android:padding="24dp"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/iv_bug"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_bug_name"
        android:scaleType="centerCrop"
        android:src="@color/fruit" />



</RelativeLayout>