<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/bg_bug">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="글 제목"
        android:fontFamily="@font/suncheon"
        android:padding="8dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:text="글 내용,글 내용,글 내용,글 내용,글 내용,글 내용,글 내용,글 내용"
        android:textSize="12sp"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:text="2022.11.03 13:14"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date"
        android:layout_toLeftOf="@+id/how_many_like"
        android:text="좋아요 수 : "
        android:fontFamily="@font/suncheon"
        android:textSize="10sp"/>
    <TextView
        android:id="@+id/how_many_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/tv"
        android:text="1"
        android:fontFamily="@font/suncheon"
        android:textSize="10sp"/>

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:text="삭제"
        android:textSize="10sp"
        android:backgroundTint="@color/branch"
        android:layout_below="@+id/tv_text"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/btn_update"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:text="수정"
        android:textSize="10sp"
        android:backgroundTint="@color/branch"
        android:layout_below="@+id/tv_text"
        android:layout_toLeftOf="@+id/btn_delete"
        android:layout_marginRight="8dp"/>



</RelativeLayout>